{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "lib": ["ES2020"]
    },
    "include": ["src/*.ts"]
}
