{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "app",
        "skipLibCheck": true,
        "removeComments": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "lib": []
    },
    "include": [
        "src/bot/index.ts",
        "src/jobs/*.ts"
    ]
}
